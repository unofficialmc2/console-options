{
  "name": "unofficialmc2/console-options",
  "description": "option parser pour ligne de commande PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Fabien Sanchez",
      "email": "fabien.sanchez@arche-mc2.fr"
    }
